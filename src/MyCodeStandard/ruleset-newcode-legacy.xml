<?xml version="1.0"?>
<ruleset name="My Code Standard"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.github.io/pmd-6.0.x.xsd">

    <description>A custom ruleset/coding standard for new code in legacy project</description>

    <!-- PSR-12 as base, checks only formatting -->
    <rule ref="PSR12" />
    
    <!-- Warn when your code uses PHP functions that are officially deprecated -->
    <rule ref="Generic.PHP.DeprecatedFunctions" />

    <!-- Warn for unreachable code -->
    <rule ref="Squiz.PHP.NonExecutableCode" />
    
    <!-- Custom rule for double semicilon in line ending -->
    <rule ref="MyCodeStandard.Syntax.DoubleSemicolon" />
</ruleset>